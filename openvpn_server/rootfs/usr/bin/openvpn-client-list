#!/usr/bin/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Add-on: OpenVPN Server
# List all OpenVPN clients
# ==============================================================================

declare config_dir="/data/openvpn"
declare pki_dir="${config_dir}/pki"
declare index_file="${pki_dir}/index.txt"

if [[ ! -f "${index_file}" ]]; then
    bashio::log.error "No clients found. PKI may not be initialized."
    exit 1
fi

bashio::log.info "OpenVPN Clients:"
bashio::log.info "================================================"

# Parse index.txt for valid (V) and revoked (R) certificates
while IFS= read -r line; do
    status=$(echo "${line}" | awk '{print $1}')
    cn=$(echo "${line}" | awk -F'/CN=' '{print $2}' | cut -d'/' -f1)
    
    if [[ "${cn}" == "server" ]] || [[ "${cn}" == *"CA"* ]]; then
        continue
    fi
    
    if [[ "${status}" == "V" ]]; then
        echo "  ✓ ${cn} (Active)"
    elif [[ "${status}" == "R" ]]; then
        echo "  ✗ ${cn} (Revoked)"
    fi
done < "${index_file}"

bashio::log.info "================================================"

# Show connected clients
if [[ -f "${config_dir}/openvpn-status.log" ]]; then
    bashio::log.info "Currently Connected Clients:"
    bashio::log.info "================================================"
    
    awk '/CLIENT_LIST/ {print "  → " $2 " (" $3 ") - Connected since: " $8 " " $9}' \
        "${config_dir}/openvpn-status.log" 2>/dev/null || echo "  No clients currently connected"
    
    bashio::log.info "================================================"
fi

exit 0
